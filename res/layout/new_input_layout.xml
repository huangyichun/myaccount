<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/other_background" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back_pic" />

        <RelativeLayout
            android:id="@+id/rl_new_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_centerVertical="true" 
                android:id="@+id/tv_new_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增收入"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_new_output"
                android:src="@drawable/icon_serch_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_contain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="保存"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_contain"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@id/tv_contain"
            android:src="@drawable/contain" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_output_money"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:text="金额:"
            android:textSize="20sp" />

        <EditText
            android:inputType="numberDecimal"
            android:id="@+id/et_output_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="0.00"
            android:textColor="#e51c23"
            android:textSize="30sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#757575"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:id="@+id/rl_output_type"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:text="类别:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_output_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="工资收入"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#757575"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:id="@+id/rl_output_account"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:text="账户:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_output_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="现金"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#757575"
        android:src="@drawable/icon" />

    <RelativeLayout
        android:id="@+id/rl_output_time"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:text="日期:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_output_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="2015-11-05"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#757575"
        android:src="@drawable/icon" />

    <EditText
        android:id="@+id/et_notes"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="请填写备注信息"
        android:maxLines="4"
        android:textColor="#757575"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bt_contain"
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
     	android:background="@drawable/shape"
        android:gravity="center"
        android:text="保存"
        android:layout_marginLeft="20dp" 
        android:layout_marginRight="20dp"
        />

</LinearLayout>